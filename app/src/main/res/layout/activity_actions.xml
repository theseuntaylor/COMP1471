<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".view.ActionsActivity">

    <Button
        android:id="@+id/viewTraysButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/view_trays"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/createNewTrayButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/createNewTrayButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/create_new_tray_submission"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/createNewOperator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewTraysButton" />

    <Button
        android:id="@+id/createNewOperator"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:text="@string/create_new_sterilisation_operator"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/initiateSterilisationProcess"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createNewTrayButton" />

    <Button
        android:id="@+id/initiateSterilisationProcess"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/initiate_sterilisation_process"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createNewOperator" />


</androidx.constraintlayout.widget.ConstraintLayout>